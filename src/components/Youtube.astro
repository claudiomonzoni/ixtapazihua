---
export interface Props {
  url: string;
}
const { url } = Astro.props;
---

<div class="video">
  <iframe
    width="560"
    height="315"
    loading="lazy"
    src={`${url}?rel=0&amp;controls=1&amp;modestbranding=1`}
    frameborder="0"
    allow="accelerometer;  autoplay; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen></iframe>


</div>

<style>
  .video {
    position: relative;
    padding-bottom: 56.25%;
    /* 16:9 */
    height: 0;
    border-radius: .8rem;
    overflow: hidden;
    margin-top: 6rem;
    @media (max-width: 479px) {
      margin-top: 0rem;
      margin-bottom: 2rem;
   
  }
  }

  .video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
