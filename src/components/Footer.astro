<style lang="scss">
  @import "../estilos/_variables.scss";

  footer {
    margin-top: $margen;
    background: $azul;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0) 40%,
      $azul 40%
    );
    padding-bottom: $margen;
  }

  .elpie {
    background: $beige;
    border-radius: $radio;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: $margen;
    @include cel {
      flex-wrap: wrap;
    }
    .logo {
      flex: 1 1 20%;
      display: flex;
      justify-content: center;
    }
    ul {
      flex: 1 1 auto;
      display: inherit;
      flex-wrap: wrap;
      gap: 1rem;
      li {
        list-style: disc;
        margin: 0 0 0 1rem;
      }
    }
  }
  .bandeja {
    padding: $margen;
    @include cel{
      padding: 2rem;
    }
  }
  .newsletter {
    color: #fff;
    border-bottom: solid 1px #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: $margen;
    .izq{
      flex: 1 1 50%;
    }
    .der{
      flex: 1 1 50%;
      display: flex;
    }
    h3 {
      font-size: clamp(2rem, 2dvw, 2.3rem);
    }
    @include cel {
      gap: 2rem;
      flex-wrap:wrap;
    }
  }
  input{
    border: none;
    margin: 0;
    padding: 1rem;
    border-radius:  $radio 0 0 $radio;
    vertical-align:middle; 
    white-space:0;
    width: 100%;
    font-size: .9rem;
  }
  
  input[type="submit"]{
    width: 40%;
    border: none;
    margin: 0;
    padding: 1rem;
    background: $naranja;
    border-radius: 0 $radio $radio 0;
    color: #fff;
    cursor:pointer;
  }
  
  input[type="submit"]:hover{
    background: $fondo;
    color:$naranja;
    font-weight: bold;
  }
</style>
