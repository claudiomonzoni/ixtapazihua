<style lang="scss">
  @import "../estilos/_variables.scss";

   /* Firefox */
* {
  scrollbar-width: thin;
  scrollbar-color: $verde $naranja;
}

/* Chrome, Edge and Safari */
*::-webkit-scrollbar {
  height: 10px;
  width: 10px;
}
*::-webkit-scrollbar-track {
  border-radius: 5px;
  background-color: $naranja;
}

*::-webkit-scrollbar-track:hover {
  background-color: #B8C0C2;
}

*::-webkit-scrollbar-track:active {
  background-color: #B8C0C2;
}

*::-webkit-scrollbar-thumb {
  border-radius: 5px;
  background-color: $azul;
}

*::-webkit-scrollbar-thumb:hover {
  background-color: $beige;
}

*::-webkit-scrollbar-thumb:active {
  background-color: $azul;
}


  .rieles {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: $margen-riel;
    margin-top: $margen-top;
    @include cel{
      margin-top: $margen-top-cel;
    }

    @include cel {
      flex-wrap: wrap;
      .info {
        margin-right: none;
        margin-bottom:$margen-cel;
      }
    }
  }
  .info {
    margin-right: $margen;

    h3 {
      color: $naranja;
      padding-bottom: 1rem;
    }
  }
  .riel {
    overflow-x: auto;
    overflow-behavior-inline: contain;
    scroll-snap-type: inline mandatory;
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 60%;
    gap: 1rem;
    background: $fondo;
    background: linear-gradient(0deg, rgba(255,255,255,0) 10%, $fondo 10%, $fondo 50%, $fondo 90%, rgba(255,255,255,0) 90%);
    
    @include cel {
      grid-auto-columns: 80%;
    }
  }
  .playa {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
    grid-template-rows: 20% 1fr 20%;
    scroll-snap-align: center;
    padding: 2em;
    align-items: center;
    @include cel {
      padding: 0 0 2rem 0;
      grid-template-rows:  1fr 1fr 1fr 1fr;
      grid-template-columns: 5% 1fr 5%;
    }
    
    .bloque {
      order: 2;
      grid-column: 1 / span 2;
      grid-row: 2 / span 1;
      background: $azul;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: $radio;
      padding: 2em;
      aspect-ratio: 2/1;
      @include cel{
        border-radius: $margen-cel;
        padding: $margen-cel;
      }
      position: relative;
      img{
        position: absolute;
        right: 1rem;
        top: 1rem;
      }
     
      @include cel {
        grid-column: 2 / span 1;
        grid-row: 1 / span 2;
        h2{
        padding-bottom: .7rem;
      }
      img{
        right: 0;
        top: 0;
      }
      }

      .cta{
        margin: .5em 0;
      }
    }


    img {
      grid-column: 2/ -1;
      grid-row: 1 / -1;
      order: 1;
      aspect-ratio: 9/8;
      object-fit: cover;
      @include cel {
        grid-column: 1/ -1;
        grid-row: 2 / -1;
        aspect-ratio: 5/6;
      }
    }
  }
</style>
